    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Build Tool",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/build-tool/ckbuild",
            "args": [
                "../compile_commands.json"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/build/build-tool",
            "environment": [],
            "externalConsole": true,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        },
        {
            "name": "Debug Test Game",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/testing/TestGame",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/testing",
            "preLaunchTask": "deploy",
            "environment": [],
            "externalConsole": true,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        }
    ]
}